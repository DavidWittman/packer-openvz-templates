{
    "variables": {
        "user": "root",
        "password": "zomgpleasechangeme",
        "disk_size": "15000",
        "domain": ""
    },

    "builders":
    [
        {
            "name": "centos67",

            "type": "qemu",
            "qemuargs": [ [ "-m", "1024m" ] ],
            "format": "qcow2",
            "headless": true,
            "accelerator": "kvm",
            "disk_size": "{{ user `disk_size`}}",

            "iso_url": "http://mirror.rackspace.com/CentOS/6.7/isos/x86_64/CentOS-6.7-x86_64-minimal.iso",
            "iso_checksum": "9381a24b8bee2fed0c26896141a64b69",
            "iso_checksum_type": "md5",

            "http_directory": "http",

            "ssh_username": "{{user `user`}}",
            "ssh_password": "{{user `password`}}",
            "ssh_wait_timeout": "600s",
            "shutdown_command": "echo '{{user `password`}}'|sudo -S shutdown -h now",

            "boot_wait": "2s",
            "boot_command": [
                   "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
            ]
        }
    ],

    "provisioners": [
        {
            "type": "shell",
            "scripts": [
                "scripts/base.sh",
                "scripts/openvz.sh",
                "scripts/cleanup.sh"
            ]
        }
    ],
    "post-processors": [
        {
            "type": "tarball"
        }
    ]
}
